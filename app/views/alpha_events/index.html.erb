<% provide :title, 'Events' %>
<% if user_signed_in? %>
    <div class="row">
      <%= link_to 'New Event', new_alpha_event_path, :class => 'btn btn-default pull-right' %>
    </div>
<% end %>
<section class="live-hangouts">
  <div class="panel-group" id="accordion">
    <div class="panel panel-info hidden-xs">
      <div class="panel-heading hg-headings">
        <%= render partial: 'index_header' %>
      </div>
      <% @alphaEvents.each do |event| %>
          <div class='container-fluid'>
          <div class='row'  id = 'row-<%=event.id%>' >
            <div class="col-sm-3"><%= event.start_planned %></div>
            <div class="col-sm-1"><%= event.title  %></div>
            <div class="col-sm-1"><%= event.tags  %></div>
            <div class="col-sm-1"><%= event.agenda  %> </div>
            <div class="col-sm-1"><%= event.comments  %> </div>
            <div class="col-sm-1"><%= link_to 'Edit', edit_alpha_event_path(event) %></div>
            <div class="col-sm-1"><%= link_to 'Show', alpha_event_path(event) %></div>
            <div class="col-sm-1"><%= link_to 'Destroy', alpha_event_path(event), method: :delete%></div>
          </div>
          </div>
      <% end %>
    </div>
  </div>
</section>