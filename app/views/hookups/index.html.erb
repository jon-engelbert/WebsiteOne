<%= form_tag({controller: "hookups", action: 'filter'}, method: 'post', class: 'form-horizontal', id: 'form-hookup-select') do %>
    <div>
        <%= radio_button_tag :category, "hookups", @category == "hookups", class: 'r-button' %>
        <%= label_tag(:cat_hookup, "Hookups", class: 'button-label') %>
        <%= radio_button_tag :category, "scrums", @category == "scrums", class: 'r-button' %>
        <%= label_tag(:cat_scrum, "Scrums", class: 'button-label') %>
        <%= radio_button_tag(:category, "hookups_and_scrums", @category == "hookups_and_scrums", class: 'r-button') %>
        <%= label_tag(:cat_scrum, "Hookups_and_Scrums", class: 'button-label') %>
    </div>
    <div>
    <%= submit_tag "Filter", class: 'btn btn-primary' , class: 'button-left'%>
        </div>
<% end %>
<h2>Active Hookups</h2>
<% if @active_hangouts.present? %>
    <table id="active_hookups" class='hookups_table'>
      <tr>
        <th>Title</th>
        <th>Start Date</th>
        <th>Start Time</th>
        <th>Actions</th>
      </tr>
      <% @active_hangouts.each do |hangout| %>
          <tr>
            <td><%= hangout.title %></td>
            <td><%= format_date(hangout.start_datetime) %></td>
            <td><%= format_time(hangout.start_datetime) %></td>
            <td id="join">
              <%= link_to 'Join', hangout.hangout_url %>
            </td>
          </tr>
      <% end %>
    </table>
<% end %>
<h2>Pending Hookups</h2>
<% if @pending_events.present? %>
    <table id="pending_hookups" class='hookups_table'>
      <tr>
        <th>Title</th>
        <th>Start Date</th>
        <th>Time range</th>
        <th>Actions</th>
      </tr>
      <% @pending_events.each do |hookup| %>
          <tr>
            <td><%= hookup.name %></td>
            <td><%= format_date(hookup.start_datetime) %></td>
            <td><%= format_time_range(hookup) %></td>
            <% if user_signed_in? %>
                <td id="start">
                  <%= link_to 'Create Hangout', event_path(hookup) %>
                </td>
            <% end %>
          </tr>
      <% end %>
    </table>
<% end %>
