<div class='container-fluid'>
  <div class='row'>
    <div class="col-xs-1 col-sm-1 hg-toggle">
      <a class="collapse-button" data-toggle="collapse" data-parent="#accordion" href="#<%= "collapse#{index}" %>">
        <%= fa_icon "caret-right" %></a>
    </div>
    <div class="col-xs-4 col-sm-1"> <%= hangout.start_planned %> </div>
    <div class="col-xs-12 col-sm-4"> <%= hangout.title %> </div>
    <div class="col-xs-12 col-sm-4"><%= hangout.project_link %></div>
    <div class="col-xs-4 col-sm-1 hg-avatar">
      <%= render partial: 'users/user_avatar', locals: { user: hangout.host, placement: 'top' } %>
    </div>
    <div class="col-xs-2 col-sm-1">
      <div class="row">
        <% if hangout.id.present? %>
            <div><%= hangout.hangout_link %></div>
            <div><%= hangout.edit_link %></div>
        <% elsif hangout.event.present? %>
            <div><%= hangout.event_link %></div>
            <div><%= hangout.edit_new_link %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
