<fieldset class="event_option" id="repeats_weekly_options">
  <div class="control-group">
    <label class="control-label">Each</label>
    <div class="controls">
      <% Event::DAYS_OF_THE_WEEK.each do |day_of_the_week| %>
          <%= label_tag "event_repeats_weekly_each_days_of_the_week_#{day_of_the_week}", day_of_the_week.humanize, :class => 'checkbox inline' do %>
              <%= day_of_the_week.humanize %>
          <% end %>
      <% end %>
      <%= hidden_field_tag :repeats_every_n_weeks, :value => '1' %>
      <%= hidden_field_tag 'event[repeats_weekly_each_days_of_the_week][]', '' %>
    </div>
  </div>
</fieldset>
